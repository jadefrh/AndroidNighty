<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.jadefrh.nightylogin.SettingsActivity">


    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/distanceBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/distanceBar"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/distanceBar" />

    <SeekBar
        android:id="@+id/distanceBar"
        android:layout_width="304dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="72dp"
        android:max="160"/>

    <TextView
        android:id="@+id/distanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginBottom="39dp"
        app:layout_constraintBottom_toTopOf="@+id/distanceBar"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/distanceBar"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/distanceBar" />

</android.support.constraint.ConstraintLayout>
