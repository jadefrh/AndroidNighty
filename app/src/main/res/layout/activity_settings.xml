<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.jadefrh.nightylogin.SettingsActivity">


    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintLeft_toLeftOf="@+id/female"
        app:layout_constraintRight_toRightOf="@+id/both"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/male"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
        android:id="@+id/ageBar"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp" />

    <SeekBar
        android:id="@+id/distanceBar"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:max="160"
        android:layout_marginTop="104dp"
        app:layout_constraintTop_toBottomOf="@+id/ageBar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />



    <TextView
        android:id="@+id/distanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maximum Distance"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toTopOf="@+id/distanceBar"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/distanceBar"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/distanceBar"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.501" />

    <Button
        android:id="@+id/female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/male"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distanceBar" />

    <Button
        android:id="@+id/male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/distanceBar" />

    <Button
        android:id="@+id/both"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Both"

        app:layout_constraintLeft_toRightOf="@+id/male"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distanceBar" />

    <TextView
        android:id="@+id/minAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="min"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toTopOf="@+id/ageBar"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/maxAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="max"
        app:layout_constraintLeft_toRightOf="@+id/minAge"
        android:layout_marginLeft="313dp"
        app:layout_constraintTop_toTopOf="@+id/ageBar"
        android:layout_marginTop="8dp" />

</android.support.constraint.ConstraintLayout>
