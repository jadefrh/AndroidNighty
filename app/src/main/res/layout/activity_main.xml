<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jadefrh.nightylogin.MainActivity">

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Fais de beaux rêves..."
        tools:layout_editor_absoluteY="55dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/login_button"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/login_button"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="La nuit est à la fois mystérieuse et magnifique. Tout comme tes futures rencontres ici !"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/login_button"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/login_button"
        app:layout_constraintHorizontal_bias="0.572"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtStatus" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        app:layout_constraintVertical_bias="0.501" />

    <TextView
        android:id="@+id/fbwarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Nous ne publierons jamais rien sur Facebook."
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/login_button"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/login_button"
        app:layout_constraintHorizontal_bias="0.386"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />

    <!--<Button
        android:id="@+id/custom_login_button"
        android:text="Custom Login"
        android:layout_below="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
    -->
</android.support.constraint.ConstraintLayout>
